<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans.xsd 
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context.xsd">
    
    
    <bean id="userBean" class="com.capgemini.spring_core_assign.beans.User">
    <property name="id" value="101"></property>
    <property name="name" value="Akhil"></property>
    </bean>
    
	<bean id="msg" class="com.capgemini.spring_core_assign.beans.Message">
	<property name="message" value="Welcome to SpringCore"></property>
	<property name="user" ref="userBean"></property>
	</bean>
	
	
	
	
	
	
	
	

</beans>